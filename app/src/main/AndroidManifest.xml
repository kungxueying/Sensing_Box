<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sensingbox">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/Sensing_box"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".User_info"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Uploading"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Select_Bluetooth"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main_screen"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".upload_failed"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".upload_success"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sensor_select"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/Sensing_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sensor_manage"
            android:label="@string/title_activity_sensor_manage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>